{
  "name": "dylanonelson-site",
  "version": "2.0.0",
  "description": "Dylan Nelson's personal website",
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "build": "html-minifier-terser --output-dir dist --input-dir src --collapse-whitespace --minify-css --process-scripts=text/javascript",
    "deploy": "npm run build && firebase deploy",
    "open": "open dist/index.html",
    "serve": "http-server dist",
    "watch": "chokidar src/index.html src/404.html -c \"npm run build\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dylanonelson/dylanonelson-site.git"
  },
  "author": "Dylan Nelson",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dylanonelson/dylanonelson-site/issues"
  },
  "homepage": "https://github.com/dylanonelson/dylanonelson-site#readme",
  "devDependencies": {
    "chokidar-cli": "^3.0.0",
    "html-minifier-terser": "^7.2.0",
    "http-server": "^14.1.1"
  }
}
